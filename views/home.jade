doctype html
html
  head
    meta(charset='utf8')
    script(src="scripts/jquery.min.js")
    script(src="scripts/socket.io.js")

  body
    div(id="main")
      div(id="player-count-wrapper")
        p Number of players: 
        p(id="player-count")

      div(id="game-status-wrapper")
        p(id="game-status")
        p(id="game-timer")
        button(id="start-button" onclick="activate()" disabled) Activate Game
        button(id="join-button" onclick="join()" disabled) Join Existing Game

      table(id="game-panel" class="table table-striped table-dark")
        thead
          tr
            th Timestamp
            th Description
        tbody
  
  link(href='scripts/css/bootstrap.min.css', rel='stylesheet')
  link(href='style/main.css', rel='stylesheet')
  script(src="socket.js")
